<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="ru.nomad.online_chat.client.ChatWindowController" prefHeight="400.0" prefWidth="400.0">
    <HBox fx:id="authorisation">
        <TextField fx:id="loginField" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" />
        <Button text="Войти" focusTraversable="false" onAction="#auth" />
    </HBox>
    <TextArea fx:id="correspondenceArea" editable="false" focusTraversable="false" wrapText="true" VBox.vgrow="ALWAYS" />
    <HBox fx:id="sendMessages" visible="false">
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Введите сообщение..." onAction="#sendMessage" />
        <Button text="Отправить" focusTraversable="false" onAction="#sendMessage"/>
    </HBox>
</VBox>
